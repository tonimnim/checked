# ChessKenya Production Configuration
# Copy this to .env and fill in the values

# App settings
APP_NAME=ChessKenya
DEBUG=false
ENVIRONMENT=production

# Database - SQLite is production-ready with WAL mode
# For 1-2 million users, SQLite handles this easily
# Store on SSD for best performance
DATABASE_URL=sqlite+aiosqlite:///./data/chesskenya.db

# JWT Authentication - GENERATE A NEW SECRET!
# Run: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_64_CHARACTER_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Chess.com API
CHESS_COM_API_BASE=https://api.chess.com/pub

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# M-Pesa Configuration (Safaricom Daraja API)
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=your_shortcode
MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/mpesa/callback
MPESA_ENVIRONMENT=production
